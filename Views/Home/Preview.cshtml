@model BingoBenji.ViewModels.PreviewSelectionVm
@{
    ViewData["Title"] = "Preview";
}

<div class="glass p-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
        <div>
            <h3 class="mb-1">Preview de tablas 🎲</h3>
            <div class="text-white-50 small">
                Gen activa: <b>@Model.ActiveGeneration.GenerationCode</b> • Stock: <b class="text-warning">@Model.StockUnassigned</b>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">← Volver</a>
            <a class="btn btn-outline-info" asp-action="Preview" asp-route-quantity="@Model.Quantity">🎲 Cambiar selección</a>
        </div>
    </div>

    <hr class="border-white border-opacity-10" />

    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <div class="alert alert-info glass">@Model.Message</div>
    }

    @if (Model.PreviewSheets.Count == 0)
    {
        <div class="alert alert-warning glass">
            No hay tablas para mostrar.
        </div>
    }
    else
    {
        <form method="post" asp-action="Buy" onsubmit="showLoader()">
            @Html.AntiForgeryToken()

            <div class="row g-3">
                @foreach (var s in Model.PreviewSheets)
                {
                    <div class="col-md-4 col-lg-3">
                        <div class="glass p-3 h-100">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="fw-bold fs-5">Tabla #@s.SheetNumber</div>
                                <span class="badge bg-warning text-dark">@s.Status</span>
                            </div>
                            <div class="text-white-50 small">Gen: @s.GenerationCode</div>

                            <input type="hidden" name="sheetIds" value="@s.Id" />

                            <div class="mt-3 d-flex gap-2">
                                <a class="btn btn-sm btn-outline-success"
                                   asp-action="Pdf"
                                   asp-route-generationCode="@s.GenerationCode"
                                   asp-route-sheetNumber="@s.SheetNumber"
                                   onclick="showLoader()">
                                    Ver PDF
                                </a>
                                <span class="text-white-50 small align-self-center">4 juegos en 1 hoja</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <hr class="border-white border-opacity-10" />

            <button class="btn btn-warning btn-lg btn-glow">
                <span>🛒 Comprar y descargar ZIP (@Model.PreviewSheets.Count PDFs)</span>
            </button>
        </form>
    }
</div>

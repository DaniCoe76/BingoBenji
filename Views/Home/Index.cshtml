@model BingoBenji.ViewModels.HomeVm
@{
    ViewData["Title"] = "Tablas";
    var hasActive = Model.ActiveGeneration != null;
    var allSold = hasActive && Model.TotalSheets > 0 && Model.StockUnassigned == 0;

    var activeCode = Model.ActiveGeneration?.GenerationCode ?? "";
}

<div class="glass p-4">
    <!-- Header / Hero -->
    <div class="d-flex flex-wrap align-items-start justify-content-between gap-3">
        <div>
            <div class="d-flex align-items-center gap-2 flex-wrap">

                @if (hasActive)
                {
                    <span class="badge rounded-pill bg-dark border border-white border-opacity-25 px-3 py-2">
                        Gen activa:
                        <span class="fw-bold text-warning">@Model.ActiveGeneration!.GenerationCode</span>
                    </span>

                    @if (allSold)
                    {
                        <span class="badge rounded-pill bg-success px-3 py-2">
                            ✅ Tablas ya compradas
                        </span>
                    }
                    else
                    {
                        <span class="badge rounded-pill bg-warning text-dark px-3 py-2">
                            ⏳ Tablas pendiente de compra
                        </span>
                    }
                }
            </div>
        </div>

        <div class="d-flex gap-2 flex-wrap">
            @if (Model.TotalSheets == 0)
            {
                <form method="post" asp-action="Generate1000" onsubmit="showLoader()">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-warning btn-glow">
                        <span>⚙️ Generar 1000</span>
                    </button>
                </form>
            }

            <form method="post" asp-action="Regenerate" onsubmit="return confirmRegenerate();">
                @Html.AntiForgeryToken()
                <button class="btn btn-outline-danger">
                    🔁 Regenerar tablas
                </button>
            </form>
        </div>
    </div>

    <hr class="border-white border-opacity-10 my-4" />

    @if (!hasActive)
    {
        <div class="alert alert-info glass mb-0">
            No hay generación activa todavía. Genera 1000 para iniciar.
        </div>
    }
    else
    {
        <!-- KPIs -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="glass p-3 h-100">
                    <div class="text-white-50 small">Total tablas</div>
                    <div class="fs-2 fw-bold">@Model.TotalSheets</div>
                    <div class="text-white-50 small">En esta generación</div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="glass p-3 h-100">
                    <div class="text-white-50 small">Stock disponible</div>
                    <div class="fs-2 fw-bold text-warning">@Model.StockUnassigned</div>
                    <div class="text-white-50 small">Unassigned</div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="glass p-3 h-100">
                    <div class="text-white-50 small">Compradas</div>
                    <div class="fs-2 fw-bold text-success">@Model.SoldCount</div>
                    <div class="text-white-50 small">Sold</div>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <!-- ZIP card -->
            <div class="col-lg-7">
                <div class="glass p-4 h-100">
                    <div class="d-flex justify-content-between align-items-start gap-2">
                        <div>
                            <h5 class="mb-1">📦 Descargar ZIP completo</h5>
                            <div class="text-white-50 small">
                                Incluye <b>1000 PDFs</b> en orden. Al momento de darle al botón de descargar todas las tablas pasarán al estado de <b>Compradas</b> si el estado ya es comprado entonces solo se descargará el zip.
                            </div>
                        </div>

                        <div class="text-end">
                            @if (allSold)
                            {
                                <div class="badge bg-success">Inventario ya comprado</div>
                            }
                            else
                            {
                                <div class="badge bg-warning text-dark">Se marcará como comprado</div>
                            }
                        </div>
                    </div>

                    <div class="mt-3">
                        <form id="startJobForm" method="post" asp-action="StartDownloadZipJob">
                            @Html.AntiForgeryToken()

                            <button type="button"
                                    class="btn btn-warning btn-lg btn-glow w-100 d-flex align-items-center justify-content-between px-4 py-3"
                                    onclick="startZipJobFlow()">
                                <span class="fw-semibold">
                                    @(allSold ? "⬇️ Descargar ZIP nuevamente" : "🛒 Descargar ZIP y comprar")
                                </span>
                                <span class="text-dark fw-bold">
                                    1000 PDFs
                                </span>
                            </button>
                        </form>

                        <div class="text-white-50 small mt-2">
                            Verás una barra de progreso real mientras se generan los PDFs y el ZIP.
                        </div>
                    </div>

                    <hr class="border-white border-opacity-10 my-3" />

                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <span class="text-white-50 small">Estado:</span>
                        @if (allSold)
                        {
                            <span class="badge bg-success">✅ Ya fueron compradas</span>

                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">⏳ Pendientes por comprar</span>
                            <span class="text-white-50 small">Se actualizarán a "tablas compradas" si confirmas.</span>
                        }
                    </div>
                </div>
            </div>

            <!-- PDF search card -->
            <div class="col-lg-5">
                <div class="glass p-4 h-100">
                    <h5 class="mb-2">🔎 Reimprimir / Ver PDF</h5>
                    <div class="text-white-50 small mb-3">
                        Abre el PDF en una nueva pestaña para previsualizar y descargar si deseas.
                    </div>

                    <form method="get" asp-action="Pdf" class="row g-2" target="_blank">
                        <div class="col-12">
                            <label class="form-label text-white-50 mb-1">Generación</label>

                            <!-- ✅ Listbox de generaciones (cargado por JS). Default: activa -->
                            <select class="form-select" name="generationCode" id="genSelect">
                                <option value="@activeCode" selected>@activeCode</option>
                            </select>

                            <div class="text-white-50 small mt-1">
                                Por defecto está seleccionada la generación activa.
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label text-white-50 mb-1">Tabla #</label>
                            <input class="form-control"
                                   name="sheetNumber"
                                   type="number"
                                   min="1"
                                   max="1000"
                                   placeholder="56" />
                        </div>

                        <div class="col-12 mt-1">
                            <button class="btn btn-success w-100">
                                Abrir PDF ↗
                            </button>
                        </div>
                    </form>

                    <div class="text-white-50 small mt-3">
                        Tip: puedes elegir generaciones anteriores desde la lista.
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal progreso -->
<div class="modal fade" id="zipProgressModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass">
            <div class="modal-header border-0">
                <h5 class="modal-title">Generando ZIP…</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <div class="text-white-50 small mb-2" id="zipMsg">Iniciando…</div>

                <div class="progress" style="height: 18px;">
                    <div id="zipBar" class="progress-bar progress-bar-striped progress-bar-animated bg-warning"
                         role="progressbar" style="width: 0%">
                        0%
                    </div>
                </div>

                <div class="text-white-50 small mt-2">
                    No cierres esta pestaña mientras se arma el ZIP.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmRegenerate() {
            const c1 = confirm("Vas a REGENERAR las 1000 tablas.\nEsto borrará las tablas anteriores.\n¿Seguro?");
            if (!c1) return false;

            const c2 = confirm("CONFIRMACIÓN FINAL:\nSe borrarán las 1000 tablas y se crearán 1000 nuevas.\n¿Confirmas?");
            if (!c2) return false;

            showLoader();
            return true;
        }

        let zipPollTimer = null;

        async function startZipJobFlow() {
            try {
                // 1) Revisar estado en BD
                const statusResp = await fetch('/Home/DownloadAllZipStatus');
                const status = await statusResp.json();

                if (!status || status.ok !== true) {
                    alert(status?.message || "No se pudo validar el estado en la BD.");
                    return;
                }

                // 2) Confirmaciones según tu regla
                let markUnassignedAsSold = false;

                if (status.allSold === true) {
                    const again = confirm("¿Estás seguro de descargar nuevamente las 1000 tablas, ya que previamente han sido descargadas y compradas?");
                    if (!again) return;

                    markUnassignedAsSold = false; // ya están sold, NO tocar
                } else {
                    const c1 = confirm("Vas a descargar el ZIP de todas las tablas (1..1000).\n¿Seguro que deseas continuar?");
                    if (!c1) return;

                    const c2 = confirm("CONFIRMACIÓN FINAL:\nEsto marcará TODAS las tablas NO ASIGNADAS como COMPRADAS en la base de datos.\n¿Confirmas?");
                    if (!c2) return;

                    markUnassignedAsSold = true;
                }

                // 3) Iniciar job (POST)
                const form = document.getElementById('startJobForm');
                const token = form.querySelector('input[name="__RequestVerificationToken"]').value;

                const startResp = await fetch('/Home/StartDownloadZipJob?markUnassignedAsSold=' + (markUnassignedAsSold ? 'true' : 'false'), {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token }
                });

                if (!startResp.ok) {
                    const msg = await startResp.text();
                    alert("No se pudo iniciar el ZIP:\n" + msg);
                    return;
                }

                const startData = await startResp.json();
                if (!startData.ok) {
                    alert("No se pudo iniciar el ZIP.");
                    return;
                }

                const jobId = startData.jobId;

                // 4) Mostrar modal + empezar polling progreso
                showZipModal();
                updateZipUI(0, "Iniciando…");

                if (zipPollTimer) clearInterval(zipPollTimer);

                zipPollTimer = setInterval(async () => {
                    const s = await fetch('/Home/ZipJobStatus?id=' + encodeURIComponent(jobId));
                    const data = await s.json();

                    if (!data || data.ok !== true) {
                        updateZipUI(0, "No se pudo leer el estado del job.");
                        return;
                    }

                    const p = parseInt(data.progress || 0, 10);
                    updateZipUI(p, data.message || "");

                    if (data.status === "Error") {
                        clearInterval(zipPollTimer);
                        zipPollTimer = null;
                        updateZipUI(p, "Error: " + (data.message || "falló"));
                        return;
                    }

                    if (data.status === "Done" && p >= 100) {
                        clearInterval(zipPollTimer);
                        zipPollTimer = null;

                        updateZipUI(100, "Descargando ZIP…");

                        // 5) Disparar descarga (ya está listo)
                        window.location.href = '/Home/DownloadZipJob?id=' + encodeURIComponent(jobId);

                        // Recargar luego para ver conteos
                        setTimeout(() => window.location.reload(), 1200);
                    }
                }, 1000);

            } catch (e) {
                alert("Error inesperado iniciando el ZIP.");
            }
        }

        function showZipModal() {
            const modalEl = document.getElementById('zipProgressModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalEl, { backdrop: 'static', keyboard: false });
            modal.show();
        }

        function updateZipUI(percent, message) {
            const bar = document.getElementById('zipBar');
            const msg = document.getElementById('zipMsg');

            const p = Math.max(0, Math.min(100, percent || 0));
            bar.style.width = p + "%";
            bar.textContent = p + "%";
            msg.textContent = message || "";
        }

        // ✅ Cargar generaciones para el listbox de PDF (default: activa)
        document.addEventListener('DOMContentLoaded', async () => {
            try {
                const active = "@activeCode";
                const sel = document.getElementById('genSelect');

                const resp = await fetch('/Home/GenerationCodes');
                if (!resp.ok) return;

                const data = await resp.json();
                if (!data || data.ok !== true) return;

                const codes = data.codes || [];
                if (codes.length === 0) return;

                // Rebuild options
                sel.innerHTML = "";
                for (const c of codes) {
                    const opt = document.createElement('option');
                    opt.value = c;
                    opt.textContent = c;
                    if (c === active) opt.selected = true;
                    sel.appendChild(opt);
                }
            } catch { }
        });
    </script>
}
